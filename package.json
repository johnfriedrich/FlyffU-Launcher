{
  "name": "flyffu-launcher",
  "version": "1.0.8",
  "main": "main.js",
  "author": "Toffee <toffeeplaysgg@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --win nsis",
    "dist:mac": "electron-builder --mac dmg",
    "dist:linux": "electron-builder --linux AppImage",
    "dist:all": "npm run dist:win && npm run dist:mac && npm run dist:linux"
  },
  "build": {
    "appId": "toffee.gg.flyffu",
    "productName": "FlyffU Launcher",
    "directories": {
      "buildResources": "build-res",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "build-res/icon.ico",
      "artifactName": "flyffu-launcher-${version}-setup.${ext}"
    }
  },
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^24.13.3"
  }
}
